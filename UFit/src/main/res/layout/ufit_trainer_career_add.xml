<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMain"
    android:gravity="center_vertical"
    android:paddingLeft="16dp">

    <EditText
        android:id="@+id/uf_career_year"
        android:gravity="center"
        android:layout_weight="3.1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:hint="해당년도 기재"
        android:textSize="13sp"
        android:inputType="phone|number"
        android:background="@drawable/rounded_career_edit"
        android:layout_marginRight="12dp"/>
    <EditText
        android:id="@+id/uf_career_title"
        android:gravity="center_vertical|left"
        android:layout_weight="5.6"
        android:layout_width="0dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:hint="이력/경력 내용 입력"
        android:background="@drawable/rounded_career_edit"/>
    <ImageView
        android:id="@+id/uf_send_career"
        android:layout_weight="1.3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_plus_8"/>

</LinearLayout>